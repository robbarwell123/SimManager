TIMEOUT 30
ECHO Loading Manage Experiment ...
docker run -v c:/SimManager/Settings/PRODmanageexperiment.properties:/microservice/config/application.properties -v c:/SimManager/Shared/experiments:/data --name ManageExperiment -d -p8091:8080 junkbarwellca/robbarwell:manageexperiment
