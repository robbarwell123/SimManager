docker run -v c:/SimManager/Settings/PRODviewexperiment.properties:/microservice/config/application.properties -v c:/SimManager/Shared/experiments:/data --name ViewExperiment -d -p8093:8080 junkbarwellca/robbarwell:viewexperiment
